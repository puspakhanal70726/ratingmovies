<p id="notice"><%= notice %></p>

<h1>Request Movies</h1>

<table>
  <thead>
    <tr>
      <th>Movie name |    </th>
      <th class="request">Actor name |    </th>
      <th class="request1">Today date |    </th>
      <th class="request2">Language   |    </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @request_movies.each do |request_movie| %>
      <tr>
        <td><%= request_movie.movie_name %></td>
        <td><%= request_movie.actor_name %></td>
        <td><%= request_movie.today_date %></td>
        <td><%= request_movie.language %></td>
        <td><%= link_to 'Show', request_movie %></td>
        <td><%= link_to 'Edit', edit_request_movie_path(request_movie) %></td>
        <td><%= link_to 'Destroy', request_movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

